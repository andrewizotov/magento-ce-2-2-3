<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="paypal.express.review">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Space48_ThirdParty::paypal/express/review.phtml</argument>
            </action>
            <block class="Magento\Framework\View\Element\Template" name="paypal.newsletter.input" template="Space48_ThirdParty::newsletter-input-paypal.phtml"/>
        </referenceBlock>
        <referenceBlock name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="newsletter.checkout.submit" template="Space48_ThirdParty::newsletter-submit.phtml"/>
        </referenceBlock>
    </body>
</page>
